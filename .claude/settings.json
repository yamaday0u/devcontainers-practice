{
    "permissions": {
        "allow": [
            "Bash(git status)",
            "Bash(git diff:*)",
            "Bash(git log:*)",
            "Bash(git branch:*)",
            "Bash(git checkout:*)",
            "Bash(git fetch:*)",
            "Bash(gh pr view:*)",
            "Bash(gh pr diff:*)",
            "Bash(gh pr checks:*)",
            "Bash(gh pr create:*)",
            "Bash(gh api:*)"
        ],
        "deny": [
            "Bash(git push --force:*)",
            "Bash(git push -f:*)",
            "Bash(git reset --hard:*)",
            "Bash(gh pr merge:*)"
        ]
    }
}
